{
  "version": 2,
  "builds": [
    {
      "src": "api/game.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/api/game",
      "dest": "/api/game.js"
    }
  ]
}